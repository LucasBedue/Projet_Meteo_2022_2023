#!/usr/local/bin/gnuplot -persist
# set terminal pngcairo  transparent enhanced font "arial,10" fontscale 1.0 size 600, 400 
# set output 'heatmap_points.2.png'

set dgrid3d 500,500
set view map scale 1
set tics out
set tics nomirror
set xlabel "Longitude"
set xrange [ * : * ] noreverse writeback noextend
set x2range [ * : * ] noreverse writeback
set ylabel "Latitude"
set yrange [ * : * ] noreverse writeback noextend
set y2range [ * : * ] noreverse writeback
set zrange [ * : * ] noreverse writeback
set cbrange [ * : * ] noreverse writeback
set rrange [ * : * ] noreverse writeback
set tmargin  4

## palette humidit√©
set palette rgb 33,13,10
set colorbox vertical origin screen 0.9, 0.2 size screen 0.05, 0.6 front  noinvert bdefault
NO_ANIMATION = 1
## Last datafile plotted: "ordereddatam"
splot './Meteotmpfilesfolder/ordereddatam' using 3:4:2 with pm3d
